<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="#F5F5F5">

    <!-- Food Listings RecyclerView -->


    <!-- Requests RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requestsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNewRequests"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:padding="8dp" />

    <!-- New Requests TextView -->

    <!-- Add New Listing Button -->
    <Button
            android:id="@+id/btnAddNewListing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_bakground"
            android:textColor="@android:color/white"
            android:text="Add New Listing"
            android:padding="12dp"
            android:textSize="16sp" />

    <!-- CardViews for Dashboards -->
    <androidx.cardview.widget.CardView
            android:id="@+id/cardRestaurantManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/rvFoodListings"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Restaurant Manager Dashboard"
                android:textSize="18sp"
                android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardNgoManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/cardRestaurantManager"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="NGO Manager Dashboard"
                android:textSize="18sp"
                android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/cardNgoManager"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Admin Dashboard"
                android:textSize="18sp"
                android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <!-- Success Message TextView -->
    <TextView
            android:id="@+id/successMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@drawable/success_message_background" />
</RelativeLayout>
